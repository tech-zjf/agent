{
    "name": "agent",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "prepare": "husky install",
        "lint": "pnpm -r --if-present lint",
        "format": "pnpm exec prettier --write .",
        "format:check": "pnpm exec prettier --check .",
        "typecheck": "pnpm -r --if-present typecheck",
        "start:service": "pnpm --filter agent-service start",
        "start:desktop": "pnpm --filter agent-desktop dev"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.26.0",
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "@types/node": "^22.10.7",
        "eslint": "^9.18.0",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "prettier": "^3.4.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,mjs,cjs,json,md,css}": [
            "pnpm exec prettier --write"
        ],
        "*.{ts,tsx}": [
            "pnpm exec eslint --fix"
        ]
    }
}
